{% extends 'auth/auth_layout.html.jinja2' %}

{% block title %}
    <title>Sign-in</title>
{% endblock %}

{% block page_styles %}
    <link rel="stylesheet" href="{{ url_for('static', filename='css/login.css') }}">
{% endblock %}



{% block page_content %}

    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
            <div class="col-md-8 col-lg-6">
                <div class="login d-flex align-items-center py-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 col-lg-8 mx-auto">

                                {% with messages = get_flashed_messages(with_categories=true) %}
                                    {% if messages %}
                                        {% for category, message in messages %}
                                            <div class="alert alert-{{ category }} alert-dismissible fade show">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                <span class="text-info">{{ message }}</span>
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                {% endwith %}

                                <h3 class="login-heading mb-4">Welcome To Flask Chat!</h3>

                                <form action="{{ url_for('auth.login') }}" method="POST" enctype="multipart/form-data">
                                    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">

                                    <div class="form-label-group">
                                        <input type="email" id="email1" name="email" class="form-control"
                                               placeholder="Email address" required autofocus>
                                        <label for="email1">Email address</label>
                                    </div>

                                    <div class="form-label-group">
                                        <input type="password" id="password" name="password" class="form-control"
                                               placeholder="Password" required>
                                        <label for="password">Password</label>
                                    </div>

                                    <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2"
                                            type="submit">Sign in
                                    </button>

                                    <div class="text-center">
                                        <a class="small" href="{{ url_for('auth.forgot_password') }}">Forgot password?</a>
                                    </div>

                                    <div class="text-center">
                                        <a class="small" href="{{ url_for('auth.signup') }}">Sign Up</a>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}


